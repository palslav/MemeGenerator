<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:id="@+id/topTextEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:width="300dp" />

    <EditText
        android:id="@+id/bottomTextEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/topTextEdit"
        android:width="300dp" />

    <Button
        android:id="@+id/upbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bottomTextEdit"
        android:layout_marginTop="15dp"
        android:text="Upload!!"
        android:layout_alignLeft="@+id/bottomTextEdit"
        android:layout_alignStart="@+id/bottomTextEdit" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/bottomTextEdit"
        android:text="Hit Me!!"
        android:layout_alignRight="@+id/bottomTextEdit"
        android:layout_alignEnd="@+id/bottomTextEdit" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/button"
        android:layout_centerHorizontal="true"
        app:srcCompat="@android:drawable/presence_online" />
</RelativeLayout>